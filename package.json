{
  "license": "UNLICENSED",
  "scripts": {
    "build:client": "elm make --optimize src/Client/Main.elm --output dist/elm-client.js",
    "build:client:debug": "elm make --debug src/Client/Main.elm --output dist/elm-client.js",
    "build:server": "elm make --optimize src/Server/Main.elm --output dist/elm-server.js",
    "build:server:debug": "elm make --debug src/Server/Main.elm --output dist/elm-server.js",
    "build": "yarn build:client && yarn build:server",
    "build:debug": "yarn build:client:debug && yarn build:server:debug",
    "format": "elm-format --yes src",
    "start:client": "yarn build:client && cd dist && live-server --port=4444 --watch=index.html,elm-client.js",
    "start:server": "yarn build:server && cd dist && nodemon -w server.js -w elm-server.js server.js"
  },
  "dependencies": {
    "live-server": "^1.2.0",
    "nodemon": "^1.18.4"
  },
  "devDependencies": {
    "elm": "^0.19.0-bugfix2",
    "elm-format": "^0.8.0"
  }
}
